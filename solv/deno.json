{
  "name": "@epicsdao/solv",
  "exports": "./dist/exe",
  "version": "5.0.0rc",
  "entrypoint": "src/index.ts",
  "tasks": {
    "dev": "deno run -A --watch src/index.ts",
    "s": "deno run -A src/index.ts",
    "build": "deno compile -A --target x86_64-unknown-linux-gnu --no-check --output dist/exe src/index.ts",
    "start": "dist/exe",
    "install": "deno install -Afg src/index.ts --name saver --allow-scripts=npm:bigint-buffer@1.1.5,npm:bufferutil@4.0.8,npm:utf-8-validate@5.0.10"
  },
  "imports": {
    "@/": "./src/",
    "/": "./"
  },
  "fmt": {
    "semiColons": false,
    "singleQuote": true
  }
}
