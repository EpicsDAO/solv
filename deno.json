{
  "workspace": ["./solv"],
  "variables": {
    "schema_rpc_data": "./cmn/prisma/rpc-data/rpc-data.prisma"
  },
  "tasks": {
    "dev": "deno run -A --watch solv/src/index.ts",
    "s": "deno run -A solv/src/index.ts"
  },
  "imports": {
    "@solana/web3.js": "npm:@solana/web3.js@1.95.3",
    "@std/assert": "jsr:@std/assert@1",
    "@std/dotenv": "jsr:@std/dotenv@0.225.2",
    "@std/text": "jsr:@std/text@1.0.8",
    "@cliffy": "https://deno.land/x/cliffy@v1.0.0-rc.4/command/mod.ts"
  },
  "fmt": {
    "lineWidth": 80,
    "useTabs": false,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true
  },
  "compilerOptions": {
    "checkJs": true
  },
  "nodeModulesDir": "auto"
}
